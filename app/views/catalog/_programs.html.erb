<dl id = 'programs'>
  <% for program in @programs %>
    <dt>
      <%= link_to program.name, :action => 'show', :id => program %>
      <%= link_to '+', :controller => 'cart', :action => 'add', :id => program %>
    </dt>
    <% for supplier in program.suppliers %>
      <dd><%= supplier.last_name %>, <%= supplier.first_name %></dd>
    <% end %>
    <dd><%= sprintf("Tipo: %s.", program.kind) %> </dd>
    <dd><%= sprintf("Precio: %.2f €", program.price) %> </dd>
    <dd><%= sprintf("Número de serie: %s", program.serial_number) %> </dd>
  <% end %>
</dl>
