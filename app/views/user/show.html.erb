<dl>
  <dt>Nombre</dt>
  <dd><%= @user.name %></dd>

  <dt>Usuario</dt>
  <dd><%= @user.login %></dd>

  <dt>E-mail</dt>
  <dd><%= @user.email %></dd>

  <dt>Número de veces que ha iniciado sesión</dt>
  <dd><%= @user.login_count %></dd>

  <dt>Última solicitud en</dt>
  <dd><%= @user.last_request_at %></dd>

  <% if @user.last_login_at %>
    <dt>Último inicio de sesión en</dt>
    <dd><%= @user.last_login_at %></dd>
  <% end %>

  <dt>Inicio de sesión actual en</dt>
  <dd><%= @user.current_login_at %></dd>

  <% if @user.last_login_ip %>
    <dt>Dirección IP del último acceso</dt>
    <dd><%= @user.last_login_ip %></dd>
  <% end %>

  <dt>Dirección IP de sesión actual</dt>
  <dd><%= @user.current_login_ip %></dd>
</dl>

<%= link_to 'Editar', :action => 'edit' %>
