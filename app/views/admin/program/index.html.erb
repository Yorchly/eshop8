<table>
  <tr>
    <th><a href="?sort_by=developer_id">Desarrollador</a></th>
    <th><a href="?sort_by=name">Nombre</a></th>
    <th><a href="?sort_by=serial_number">Número de serie</a></th>
    <th colspan="3"></th>
  </tr>

<% @programs.each do |program| %>
  <tr>
    <td><%= h program.developer.name %></td>
    <td><%= h program.name %></td>
    <td><%= h program.serial_number %></td>
    <td><%= link_to 'Mostrar', :action => 'show', :id => program %></td>
    <td><%= link_to 'Editar', :action => 'edit', :id => program  %></td>
    <td><%= button_to 'Eliminar', { :action => 'destroy', :id => program },
                      data: { confirm: "¿Está seguro de que desea eliminar #{program.name}?" } %></td>
  </tr>
<% end %>
</table>
<br/>
<%= will_paginate @programs, :page_links => false, :link_separator => ' | ',
                          :previous_label => 'Anterior', :next_label => 'Siguiente' %>
<p><%= link_to 'Añadir nuevo programa', :action => 'new' %></p>
