<% if @program.errors.any? %>
  <div id="errorExplanation">
  <h2><%= pluralize(@program.errors.count, "error") %> prohibited this program from being saved:</h2>
    <ul>
      <% @program.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <p><label for="program_name">Name</label><br/>
  <%= text_field 'program', 'name' %></p>
</div>

<div class="field">
  <p><label for="program_type">Type</label><br/>
  <%= text_field 'program', 'type' %></p>
</div>

<div class="field">
  <p><label for="program_developer">Developer</label><br/>
  <%= collection_select :program, :developer_id, @developers, :id, :name %></p>
</div>

<div class="field">
  <p><label for="program[supplier_ids][]">Suppliers</label><br/>
  <%= select_tag 'program[supplier_ids][]', options_from_collection_for_select(@suppliers, :id, :first_name,
      @program.suppliers.collect{|supplier| supplier.id}), { :multiple => true, :size => 5 } %></p>
</div>

<div class="field"><p>
  <label for="program_developed_at">Developed at</label><br/>
  <%= datetime_select 'program', 'developed_at' %></p>
</div>

<div class="field">
  <p><label for="program_serial_number">Serial number</label><br/>
  <%= text_field 'program', 'serial_number' %></p>
</div>

<div class="field">
  <p><label for="program_blurb">Blurb</label><br/>
  <%= text_area 'program', 'blurb' %></p>
</div>

<div class="field">
  <p><label for="program_price">Price</label><br/>
  <%= text_field 'program', 'price' %></p>
</div>

<div class="field">
  <% if @program.cover_image.exists? then %>
    <dd><%= image_tag @program.cover_image.url %></dd>
  <% else %>
    <p> There is no cover image attached. Please upload one. </p>
  <% end %>
  <p><label for="program_cover_image">Cover image</label><br/>
  <%= file_field 'program', :cover_image %></p>
</div>
